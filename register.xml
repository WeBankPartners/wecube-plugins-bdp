<?xml version="1.0" encoding="UTF-8"?>
<package name="bdp" version="v0.1">

    <!-- 1.依赖分析 - 描述运行本插件包需要的其他插件包 -->
    <packageDependencies>
    </packageDependencies>

    <!-- 2.菜单注入 - 描述运行本插件包需要注入的菜单 -->
    <menus>
    </menus>

    <!-- 3.数据模型 - 描述本插件包的数据模型,并且描述和Framework数据模型的关系 -->
    <dataModel isDynamic="false">
    </dataModel>

    <!-- 4.系统参数 - 描述运行本插件包需要的系统参数 -->
    <systemParameters>
    </systemParameters>

    <!-- 5.权限设定 -->
    <authorities>
    </authorities>

    <!-- 6.运行资源 - 描述部署运行本插件包需要的基础资源(如主机、虚拟机、容器、数据库等) -->
    <resourceDependencies>
        <docker imageName="{{REPOSITORY}}:{{VERSION}}" containerName="wecube-plugins-bdp"
                portBindings="{{ALLOCATE_PORT}}:8081" envVariables="OPS_SERVER_URL={{ops_url}}"/>
    </resourceDependencies>

    <!-- 7.插件列表 - 描述插件包中单个插件的输入和输出 -->
    <plugins>
        <plugin id="ops-add-record" name="OPS add record">
            <interface action="addRecord" path="/bdp/record" httpMethod='POST'>
                <inputParameters>
                    <parameter datatype="string" mappingType='context' required='Y'>handler</parameter>
                    <parameter datatype="string" mappingType='context' required='Y'>formType</parameter>
                    <parameter datatype="string" mappingType='context' required='Y'>fileUrl</parameter>
                    <parameter datatype="string" mappingType='context' required='Y'>createTime</parameter>
                    <parameter datatype="string" mappingType='context' required='Y'>envType</parameter>
                    <parameter datatype="string" mappingType='context' required='Y'>createUser</parameter>
                    <parameter datatype="string" mappingType='context' required='Y'>requestNo</parameter>
                    <parameter datatype="string" mappingType='context' required='Y'>recordSource</parameter>
                </inputParameters>
                <outputParameters>
                    <parameter datatype="integer">code</parameter>
                    <parameter datatype="string">data</parameter>
                    <parameter datatype="string">message</parameter>
                </outputParameters>
            </interface>
        </plugin>
    </plugins>
</package>